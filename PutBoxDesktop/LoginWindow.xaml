<Window x:Class="PutBoxDesktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PutBoxDesktop"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300" Background="#FF2F2C31">
    <Grid>
        <PasswordBox x:Name="passwordInput" HorizontalAlignment="Left" Margin="76,114,0,0" VerticalAlignment="Top" Width="120" Height="23"/>
        <TextBox x:Name="loginInput" HorizontalAlignment="Left" Height="23" Margin="76,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Left" Margin="107,93,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="116,41,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="120" Foreground="White"/>
        <Button Content="Sign In" HorizontalAlignment="Left" Margin="76,142,0,0" VerticalAlignment="Top" Width="120" Height="22" Click="Button_Click"/>
        <Label x:Name="loginMessage" Foreground="Crimson"  Content="" HorizontalAlignment="Left" Margin="76,180,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
